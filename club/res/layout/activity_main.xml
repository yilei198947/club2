<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/activity_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/home_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_launcher"
            android:gravity="center_horizontal"
            android:textColor="@color/main_activity_selector"
            android:button="@null"
            android:checked="true"
            android:text="@string/activity_main_home" />

        <RadioButton
            android:id="@+id/news_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_launcher"
            android:gravity="center_horizontal"
            android:textColor="@color/main_activity_selector"
            android:button="@null"
            android:text="@string/activity_main_news" />

        <RadioButton
            android:id="@+id/mall_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_launcher"
            android:gravity="center_horizontal"
            android:textColor="@color/main_activity_selector"
            android:button="@null"
            android:text="@string/activity_main_mall" />

        <RadioButton
            android:id="@+id/personal_center_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_launcher"
            android:gravity="center_horizontal"
            android:textColor="@color/main_activity_selector"
            android:button="@null"
            android:text="@string/activity_main_personal" />

    </RadioGroup>

</LinearLayout>